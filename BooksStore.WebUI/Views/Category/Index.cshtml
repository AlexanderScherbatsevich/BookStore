@model IEnumerable<Category>


<h1>All Categories</h1>
<hr />
<p><a asp-action="Create" class="btn btn-warning">Add a new category</a><hr /> </p>

<table class="Grid">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th colspan="2">Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-categoryId="@item.Id">
                    <i class="bi bi-pencil-square"></i>Edit
                </a>
            </td>
            <td>
                <form asp-action="Delete" asp-route-categoryId="@item.Id" method="post">
                    <input asp-for="@item.Id" type="hidden" />
                    <button class="btn btn-danger" type="submit"><i class="bi bi-trash3"></i>Delete</button>
                </form>
            </td>
        </tr>
    }
</table>


