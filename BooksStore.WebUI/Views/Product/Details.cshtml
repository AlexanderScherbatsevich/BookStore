@model Product

<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            <div class="lg-img">
                @if (Model.ImageData != null)
                {
                    <img src="@Url.Action("GetImage", "Product", new { Model.Id })"
                     width="400" height="400"
                     class="img-fluid"
                     alt="Image"
                     asp-append-version="true" />
                }
                else
                {
                    <img src="/img/default_book.jpg"
                     width="400" height="400"
                     class="img-fluid"
                     alt="Image"
                     asp-append-version="true" />
                }
            </div>

        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h2 class="card-title text-start">@Model.Name</h2>
                <p class="card-text text-start"><small class="text-muted">@Model.Author</small></p>
                <h5 class="price">@Model.Price.ToString("c")</h5>
                <div class="text-end">
                    <form asp-controller="Cart" asp-action="AddToCart" asp-route-returnUrl="@Url.Action("Details", "Product", $"{Model.Id}")">
                        <input asp-for="Id" type="hidden" />
                        <button class="btn btn-primary " type="submit"><i class="bi bi-cart3 m"></i> +Add to cart</button>
                    </form>
                </div>
                <hr />
                <p class="card-text">@Model.Description</p>
            </div>
        </div>
    </div>
</div>